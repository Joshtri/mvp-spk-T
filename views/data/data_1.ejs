<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <% let titlePage = "Data 1"%>
    <title><%= titlePage %></title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.1/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-4bw+/aepP/YC94hEpVNVgiZdgIC5+VKNBQNGCHeKRQN+PtmoHDEXuppvnDJzQIu9" crossorigin="anonymous">

    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/animate.css/4.1.1/animate.min.css"/>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.2/css/all.min.css" integrity="sha512-z3gLpd7yknf1YoNbCzqRKc4qyor8gaKU1qmn+CShxbuBusANI9QpRohGBreCFkKxLhei6S9CQXFEbbKuqLg0DA==" crossorigin="anonymous" referrerpolicy="no-referrer" />

    <link rel="stylesheet" href="https://cdn.datatables.net/1.13.6/css/jquery.dataTables.css" />
</head>
<body>
    <!-- Tambahkan referensi jQuery -->
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <script src="https://cdn.datatables.net/1.13.6/js/jquery.dataTables.js"></script>
    <%- include('layouts/header'); %>

    <div class="row no-gutters g-0 mt-5" style="min-height: calc(110vh - 50px);">
        <%- include('layouts/sidebar.ejs')%>

        <div class="col-10 mt-5 p-5 pt-3">
            <h4 class="text-center mb-4">Data 1</h4>

            <nav aria-label="breadcrumb">
                <ol class="breadcrumb">
                  <li class="breadcrumb-item"><a href="/dashboard"><i class="fa-solid fa-house-chimney mx-1" style="color: #6f8ab8;"></i>Dashboard</a></li>
                  <li class="breadcrumb-item active" aria-current="page">Data 1</li>
                  <!-- <li class="breadcrumb-item active" aria-current="page">Data</li> -->
                </ol>
            </nav>

            <div class="card mb-5">
                <div class="card-body">
                    <div class="mb-2">
                        <button class="btn btn-outline-success btn-sm"><i class="fa-solid fa-square-plus mx-1"></i>Tambah Data</button>
                    </div>
                    
                    <div class="dropdown d-flex">
                        <a href="" class=" btn btn-outline-light mb-3 link-opacity-50-hover link-offset-2" type="button" data-bs-toggle="dropdown" aria-expanded="false"><i class="fa-solid fa-gear" style="color: #94b1f5;"></i></a>

                        <ul class="dropdown-menu">
                            <li><a class="dropdown-item" href="#">Export</a></li>
                            <li><a class="dropdown-item" href="#" data-bs-toggle="modal" data-bs-target="#modalImport">Import</a></li>
                            <li><a class="dropdown-item" href="#">Something else here</a></li>
                          </ul>
                    </div>
                </div>
            </div>

            <div class="card mt-5">
                <div class="card-body">

                    <table class="table table-hover table-sm table-light table-borderless table-bordered" id="dataTable">
                        <thead class="text-center">
                            <tr>
                                <th>No</th>
                                <th>dijf</th>
                                <th>d</th>
                                <th>Aksi</th>
                            </tr>
                        </thead>
                        <tbody class="text-center">
                            <tr>
                                <td>1</td>
                                <td>adf</td>
                                <td>adf</td>
                                <td>
                                    <a href="#" class="text-decoration-none mx-2 update-button" data-bs-toggle="modal" data-bs-target="#modalUpdateMapel">
                                      <i class="fa-solid fa-pen-to-square link-offset-2-hover link-opacity-75-hover" style="color: #5B9A8B" data-bs-toggle="tooltip" title="Update"></i>
                                    </a>
                      
                                    <a href="#" class="text-decoration-none mx-2" data-bs-target="#deleteModal" data-bs-toggle="modal">
                                      <i class="fa-solid fa-trash-can link-offset-2-hover link-opacity-75-hover" style="color: #C51605" data-bs-toggle="tooltip" title="Delete"></i>
                                    </a>
                      
                                    <a class="text-decoration-none mx-2" data-bs-toggle="modal" data-bs-target="#detailModalMapel">
                                      <i class="fa-solid fa-info link-offset-2-hover link-opacity-75-hover" style="color: #4196c0" data-bs-toggle="tooltip" title="Detail"></i>
                                    </a>
                                </td>
                            </tr>
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>

    <!-- MODAL IMPORT -->
    <div class="modal fade" id="modalImport">
        <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header bg-dark">
            <h5 class="modal-title text-white">Import Data</h5>
            </div>

            <div class="modal-body">

            <div class="input-group mb-3">
                <div class="col-md-9">
                <label for="" class="form-label">Import Data Excel</label>
                <input type="file" class="form-control" required>
                </div>
            </div>
            </div>

            <div class="modal-footer">
            <button type="submit" class="btn btn-primary">Upload File</button>
            <button type="button" class="btn btn-danger" data-bs-dismiss="modal">Tutup</button>
            </div>
        </div>
        </div>
    </div>

    <script>
        $(document).ready( function () {
            $('#dataTable').DataTable();
        } );
    </script>
</body>
</html>